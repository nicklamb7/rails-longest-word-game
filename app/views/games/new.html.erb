<h1>New Game</h1>
<ul>
  <% @letters.each do |letter| %>
    <li><div class="list__background"><%= letter.capitalize %></div></li>
  <% end %>
</ul>
<form action="/score" method="post">
  <label>What is the longest word you can find?</label>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :random_letters, @letters %>
  <input type="text" placeholder="Enter a word..." name="answer">
  <input type="submit" value="Go!">
</form>
